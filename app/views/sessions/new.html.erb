<% provide(:title, "Sign in") %>
<div class="hero-unit">
	<h1 class="center">Sign in</h1>
	<div class="row">
		<div class="span5 offset640">
			<%= form_for(:session, url: sessions_path) do |f| %>
				<!--Print user information forms-->
				<%= f.label :email %>
				<%= f.text_field :email %>

				<%= f.label :password %>
				<%= f.password_field :password %>
				<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
			<% end %>
			<p>New user? <%= link_to "Sign up now!", class: "btn btn-large btn-primary" %>
		</div>
	</div>
</div>